package YJ.TEST.MAIN;

public class PPA {
	
	public static Double as(String a, Double...d) {
		double result = 0;
		
		switch (a) {
		
		case "+":
			for(int i = 0; i<d.length;i++) {
				if(i == 0) {
					result = d[i];
				}else {
					result += d[i];
				}
			}
			break;
			
		case "-":
			for(int i = 0; i<d.length;i++) {
				if(i == 0) {
					result = d[i];
				}else {
					result -= d[i];
				}
			}
			break;
			
		case "*":
			for(int i = 0; i<d.length;i++) {
				if(i == 0) {
					result = d[i];
				}else {
					result *= d[i];
				}
			}
			break;
			
		case "/":
			for(int i = 0; i<d.length;i++) {
				if(i == 0) {
					result = d[0];
				}else {
					result /= d[i];
				}
			}
			break;
			

		default:
			System.out.println("+,-,*,/ 중 1택");
			System.out.println("연산할 숫자는 2개 이상 적어주세요.");
			break;
		}
		
		
		return result;
		
	}
	
	public static void main(String[] args) {
		System.out.println(PPA.as("+", 2d,3d,6d,2d));
		System.out.println(PPA.as("-", 2d,3d,6d,2d));
		System.out.println(PPA.as("*", 2d,3d,6d,2d));
		System.out.println(PPA.as("/", 2d,3d,6d,2d));
	}
	
}
